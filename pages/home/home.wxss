.swiper-container {
  padding: 15rpx;
  position: relative;
}

.swiper-container .swiper {
  height: 400rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 24rpx;
  background: #f80;
}

.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 2px 2px 2px 2px #ccc;
  margin: 8px;
  position: relative;
}

.article-author {
  color: gray;
  font-size: 0.8rem;
  padding-left: 10rpx;
}

.article-title {
  color: black;
  font-size: 0.9rem;
  margin-top: 15rpx;
  margin-left: 5rpx;
}

.article-niceDate {
  color: gray;
  padding-right: 10rpx;
  font-size: 0.8rem;
}

.article-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10rpx;
}

.article-ChapterName {
  color: #1296db;
  font-size: 0.8rem;
  margin-top: 30rpx;
  margin-left: 5rpx;
}

.article-collect-img {
  width: 40rpx;
  margin-right: 10rpx;
  margin-top: 30rpx;
  flex: none;
  height: 38rpx;
}
