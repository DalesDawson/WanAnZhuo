/* pages/mine/mine.wxss */

.view-bg {
  display: flex; /*设置显示样式**/
  align-items: center; /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction: column;
  width: 100%;
  height: 180px;
  background: linear-gradient(#1296db, #00ffb5);
}

.avatar {
  height: 60px;
  width: 60px;
  border-radius: 50px;
}

.username {
  color: white;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.text_f_w_16 {
  font-size: 16px;
  color: #000;
  background-color: #f5f5f5;
  padding: 10px;
}

.usercenter {
  display: flex;
  padding: 5rpx;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  margin-bottom: 2px;
}

.right {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 10px;
}

.list {
  margin-top: 30rpx;
}

/*按钮*/

.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 70px;
  color: #f74227;
  border: 0.1rpx solid #f74227;
  border-radius: 20rpx;
  font-size: 0.8rem;
}
